{
	"name": "slim/crud",
    "description": "Generador de endpoints a partir de una consulta sql que se apoya en Slim, y Illuminate ORM para servir un Api Rest",
    "authors": [
        {
            "name": "Sebastian"
        },
        {
            "name": "Nicol√°s Herrera",
            "email": "josnikh@hotmail.com"
        }
    ],
    "require": {
		"doctrine/dbal": "^2.10",
		"jdorn/sql-formatter": "dev-master",
		"monolog/monolog": "^2.1",
		"panique/pdo-debug": "0.2",
		"php-di/php-di": "^6.2",
		"slim/psr7": "^1.1",
		"slim/slim": "4.*",
		"tuupola/base62": "^2.0",
		"tuupola/cors-middleware": "^1.1",
		"tuupola/slim-basic-auth": "^3.2",
		"tuupola/slim-jwt-auth": "^3.4",
		"zircote/swagger-php": "3.0"
	},
	"require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "EndpointsApi\\": "src/",
            "Generator\\": "Generator/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public_html",
        "test": "phpunit",
		"generateCrud":"php ./crudgenerator/index.php"
    }
}
